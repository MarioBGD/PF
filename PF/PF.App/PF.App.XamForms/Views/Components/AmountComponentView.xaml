<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="PF.App.XamForms.Views.Components.AmountComponentView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <StackLayout Spacing="0">
            <!--<Label Text="{Binding Text}" TextColor="{Binding AmountColor}" IsVisible="{Binding VisibleText}" Style="{StaticResource BaseLabel}" FontSize="Small" HorizontalOptions="Center" VerticalOptions="Center" Margin="0"/>-->
            <Label
                FontSize="Large"
                HorizontalOptions="Center"
                Margin="0"
                Style="{StaticResource BaseLabel}"
                Text="{Binding AmountFormatted}"
                TextColor="{Binding AmountColor}"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>